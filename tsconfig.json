{
  "ts-node": {
    "files": false
  },
  "include": [
      "src/*"
  ],
  "compilerOptions": {
      "target": "es2020",
      "lib": ["ES2020", "DOM"],
      "module": "commonJS",
      "jsx": "react",
      "sourceMap": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "rootDir": "./src/",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "./*": ["./node_modules/*", "./src/*"]
      }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}